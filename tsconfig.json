{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "paths": {
      "tslib" : ["./node_modules/tslib/tslib.d.ts"]
    },
  },
  "include": ["src/**/*"]
}